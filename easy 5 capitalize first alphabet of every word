main()
{
    printf("Enter the string:\n");
    char str1[50],str2[50];
    gets(str1);
    int i;
    for(i=0;i<strlen(str1);i++)
    {
        if(i==0)
            str1[i]= toupper(str1[i]);
        if(str1[i]==' ')
           {
            str1[i+1]= toupper(str1[i+1]);
           }
    }
